generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  description String?
  products Product[]
}

model Product {
  id            Int       @id @default(autoincrement())
  title         String
  description   String?
  price         Float
  quantity      Int
  type          String?
  image         String?
  categoryId    Int
  category      Category  @relation(fields: [categoryId], references: [id])
}
