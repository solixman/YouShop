generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Role {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  users       User[]
}

model User {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String   @unique
  password    String
  phoneNumber Decimal?
  bio         String?
  status      String   @default("active")
  roleId      Int
  role        Role     @relation(fields: [roleId], references: [id])
}
